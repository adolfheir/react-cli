{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@images/*": [
        "./public/images/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@components/*": [
        "./src/common/components/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
    },
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017",
      "es2018.promise"
    ],
    "typeRoots": ["./node_modules/@types/", "./src/types/"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,                       
    "sourceMap": true,
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true          
  }
}
